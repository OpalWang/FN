<div class="container-fluid">
	<% @page_title="交易查询" %>

	<div class="row-fluid">
		<div class="alert alert-info">
			<button type="button" class="close" data-dismiss="alert">×</button>
			<strong>提示:</strong> 请输入查询条件进行查询!
		</div>

		<div class="row-fluid">
			<div class="well">
				<%= form_tag index_online_pay_path,method:"get",remote: :true,id: "index_and_export_form" do %>
					 <%= label_tag(:l1, "支付类型:",class:"label_inline") %> 
					 <%= select_tag(:payway,options_for_select([["",""],["paypal","paypal"],["sofort","sofort"],["支付宝","alipay"],["积分","score"],["电子现金","e_cash"]])) %> 
					 <%= label_tag(:l2, "支付子类型:",class:"label_inline") %>
					 <%= select_tag(:paytype,options_for_select([["",""],["国内支付","transaction"],["海外支付","oversea"]])) %> 
					 <%= label_tag(:l7, "用户名:",class:"label_inline") %> <%= text_field_tag(:username) %>
					 </br>
					 <%= label_tag(:l3, "交易号:",class:"label_inline") %> <%= text_field_tag(:reconciliation_id) %>
					 <%= label_tag(:l4, "订单号/补款号:",class:"label_inline") %> <%= text_field_tag(:order_no) %>
					 <%= label_tag(:l8, "注册E-Mail:",class:"label_inline") %> <%= text_field_tag(:email) %>
					 </br>
					 <%= label_tag(:l5, "交易开始时间:",class:"label_inline") %> <%= datetime_field_tag(:start_time) %>
					 <%= label_tag(:l6, "交易结束时间:",class:"label_inline") %> <%= datetime_field_tag(:end_time) %>
					 <div class="btn-toolbar">
						 <%= submit_tag("查询",class: "btn btn-primary") %>
						 <%= link_to "导出",export_index_online_pay_path,class: "btn",method: "get",id: "link_to_export"%>
					          	<%=button_tag("清除条件",type: 'button',class: "btn",id: "button_clear") %>
				          	</div>
				<% end %>	
			</div>
		</div>
	</div>

	<div class="row-fluid">
		<% unless flash[:notice].blank? %>
			<div class="alert alert-info">
				<button type="button" class="close" data-dismiss="alert">×</button>
				<%=flash[:notice]%>
			</div>
		<% end %>

		<div class="well">
			<table class="table" id="online_pay_details_table">
				<%= render partial: "online_pay_and_user_detail_title" %>
				<%= render partial: "online_pay_and_user_detail_content",collection: @online_pay,as: :online_pay %>
			</table>
			<div class="div_paginate">
				<%= render partial: "layouts/paginate_replace_ajax",locals: {page_array: @online_pay} %>
			</div>
		</div>
	</div>
</div>