<div class="container-fluid">
	<% @page_title="支付明细" %>
	<% content_for :breadcrumb do %>
		<li> <%=link_to t('用户明细'),registe_index_path,method: :get%> <span class="divider">/</span></li>
	<% end %>

	<div class="row-fluid">
		<div class="row-fluid">
			<%= render partial:"finance_water/user",locals: {user: @user} %>
		</div>

		<div class="row-fluid">
			<div class="btn-toolbar">
				<%= button_to "导出",export_user_online_pay_path(@user),class: "btn",method: "get" %>
				<%= link_to '流水明细',show_user_finance_water_path(@user),method: :get,class:"btn pull-right" %>
			</div>

			<table class="table" id="online_pay_details_table">
				<%= render partial: "online_pay_detail_title" %>
				<%= render partial: "online_pay_detail_content",collection: @online_pays,as: :online_pay %>
			</table>
			<div class="div_paginate">
				<%= paginate @online_pays %>
			</div>
		</div>
	</div>
</div>