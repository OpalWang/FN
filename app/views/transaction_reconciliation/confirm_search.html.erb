<div class="container-fluid">
<% @page_title="财务确认" %>
	<div class="row-fluid">
		<% unless flash[:notice].blank? %>
			<div class="alert alert-info">
				<button type="button" class="close" data-dismiss="alert">×</button>
				<%=flash[:notice]%>
			</div>
		<% end %>

		<div class="alert alert-info">
			<button type="button" class="close" data-dismiss="alert">×</button>
			<strong>提示:</strong> 请输入确认发票日期!
		</div>
		<div class="row-fluid">
			<div class="well">
				<%= form_tag transaction_reconciliation_confirm_path,method:"post" do %>
					<!--  <%= label_tag(:l1, "确认发票日期:") %> <%= datetime_field_tag(:end_time) %> -->
					 <%= label_tag(:l2, "最晚对账成功时间:") %> <%= text_field_tag(:max_updated_at_display,@max_updated_at,disabled: true) %>
					 <%= hidden_field_tag(:max_updated_at,@max_updated_at) %>
					 <%= label_tag(:l3, "对账成功未确认比数:") %> <%= text_field_tag(:confirm_num_display,@confirm_num,disabled: true) %>	
					 <%= hidden_field_tag(:confirm_num,@confirm_num) %>
					  <%= label_tag(:l4, "对账成功未确认金额:") %> <%= text_field_tag(:confirm_amount_display,@confirm_amount,disabled: true) %>
					 <%= hidden_field_tag(:confirm_amount,@confirm_amount) %>
					 <div class="btn-toolbar">
						<%= submit_tag("确认",class: "btn btn-primary") %>
					          	<%= button_tag("刷新",type: 'button',class: "btn",id: "button_refresh") %>
				          	</div>
				<% end %>
			</div>
		</div>
	</div>
</div>