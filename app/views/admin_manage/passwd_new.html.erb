<div class="container-fluid">
<% @page_title="密码修改" %>
	<div class="row-fluid">
		<% unless flash[:notice].blank? %>
			<div class="alert alert-info">
				<button type="button" class="close" data-dismiss="alert">×</button>
				<%=flash[:notice]%>
			</div>
		<% end %>
		
		<div class="well">
			<%= form_tag admin_manage_passwd_modify_path,method:"post" do %>
				<%= label_tag(:l1, "用户名:",class:"label_inline") %> 
				<%= text_field_tag(:admin_name,session[:admin],disabled: true) %>
				<br>
				<%= label_tag(:l2, "旧密码:",class:"label_inline") %> 
				<%= password_field_tag(:old_passwd) %>
				<br>
				<%= label_tag(:l3, "新密码:",class:"label_inline") %> 
				<%= password_field_tag(:new_passwd) %>
				<br>
				<%= label_tag(:l4, "新密码:",class:"label_inline") %> 
				<%= password_field_tag(:new_passwd_confirm) %>
				 <div class="btn-toolbar">
					<%= submit_tag("提交",class: "btn btn-primary",id: "modify_passwd_button") %>
			          	</div>
			<% end %>
		</div>
	</div>
</div>