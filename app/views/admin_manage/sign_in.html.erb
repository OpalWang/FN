<div class="no_container-fluid">
<% @page_title="登入界面" %>
	<div class="row-fluid">
		<% unless flash[:notice].blank? %>
			<div class="alert alert-info">
				<button type="button" class="close" data-dismiss="alert">×</button>
				<%=flash[:notice]%>
			</div>
		<% end %>

		<div class="well">
			<%= form_for :admin,url: admin_manage_sign_in_path,method: :post do |f| %>
				<%=label_tag :label1,"用户名:" %> <%=f.text_field :admin_name %> </br></br>
				<%=label_tag :label2,"密码:" %> <%=f.password_field :admin_passwd_encryption %> </br></br>
				 <div class="btn-toolbar">
					 <%= submit_tag("登入",class: "btn btn-primary",id: "login_button",data: {disable_with: '登入中.'}) %>
			          	</div>
			<% end %>
		</div>
	</div>
</div>